<style>
div {
    margin-bottom: 10px;
}
label {
    display: inline-block;
    width: 150px;
    text-align: right;
}
</style>
<h1> Editing <%= @student[:first_name] %> <%= @student[:last_name] %></h1>
<form action="/dojos/<%= @student.dojo_id %>/students/<%= @student.id %>" method="post">
<input type="hidden" name="_method" value="patch">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div>
        <label> First Name: </label>
        <input type='text' name='student[first_name]' value='<%= @student[:first_name] %>'/>
    </div>
    <div>
        <label> Last Name: </label>
        <input type="text" name='student[last_name]' value='<%= @student[:last_name]%>'/>
    </div>
    <div>
        <label> Email Address: </label>
        <input type="text" name='student[:email]'value='<%= @student[:email]%>'/>
    </div>
    <div>
        <label> Dojo: </label>
        <select name="student[dojo_id]" value='<%= @student[:dojo_id]%>'>
        <%= @dojos.each do |dojo| %>
            <option value="<%= dojo.id %>"><%= dojo.branch %></option>
        <% end %>
            </select>
    </div>
    <br>
    <input type='submit' value='update'/>
</form>
<br><br>
<a href="/dojos"> Home </a> | <a href="/dojos/<%= @dojo.id %>"><%= @student[:first_name] %></a>


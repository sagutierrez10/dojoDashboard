<style>
div {
    margin-bottom: 10px;
}
label {
    display: inline-block;
    width: 150px;
    text-align: right;
}
</style>
<h1> New Student </h1>
<form action="/dojos/<%= @dojo.id %>/students" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div>
        <label> First Name: </label>
        <input type='text' name='student[first_name]'/>
    </div>
    <div>
        <label> Last Name: </label>
        <input type="text" name='student[last_name]'/>
    </div>
    <div>
        <label> Email Address: </label>
        <input type="text" name='student[email]'/>
    </div>
    <div>
        <label> Dojo: </label>
            <select name="student[dojo_id]" >
            <% @dojos.each do |dojo| %>
                <% if dojo == @dojo %>
                    <option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
                <% else %>
                    <option value="<%= dojo.id %>"><%= dojo.branch %></option>
                <% end %>
            <% end %>    
            </select>
    </div>
    <br>
    <input type='submit' value='create'/>
</form>
<br><br>
<a href="/dojos"> Home </a> |
<a href="/dojos/<%= @dojo.id %>"><%= @dojo[:branch] %></a>